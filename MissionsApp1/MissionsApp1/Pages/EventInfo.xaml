<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MissionsApp1.Pages.EventInfo">
    <ContentPage.Content>
        <StackLayout BackgroundColor="MintCream">

            <Label x:Name="EventNameLabel"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="DodgerBlue"/>

            <!--<Label x:Name="EventNameLabel"/>-->

            <Label Text="Organization:"/>

            <Label x:Name="OrganizationNameLabel"/>

            <Label Text="Address:"/>
            <Label x:Name="EventAddressLabel"/>
            <Label x:Name="EventCityLabel"/>
            <Label x:Name="EventStateLabel"/>
            <Label x:Name="EventZipCodeLabel"/>
                
            <!--<Label x:Name="EventLatitudeLabel"/>
            <Label x:Name="EventLongitudeLabel"/>-->
            <Label Text="Date:"/>
            <Label x:Name="EventDateLabel"/>

            <Label Text="Time"/>
            <Label x:Name="EventStartTime"/>
            <Label x:Name="EventEndTime"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

