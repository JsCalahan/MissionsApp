<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MissionsApp1.Pages.EventInfo">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#e2f0d9">

            <Label x:Name="EventNameLabel"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="DodgerBlue"/>

            <Image Source="mapoverview.png"/>

            <Label HeightRequest="75"/>

            <Label x:Name="OrganizationNameLabel"
                   FontSize="16"/>

            <Label x:Name="Address"
                   FontSize="16"/>

            <Label x:Name="EventDateLabel"
                   FontSize="16"/>

            <Label x:Name="EventTime"
                   FontSize="16"/>

            <Button x:Name="ParticipateButton" 
                    Text="Participate"
                    Clicked="Button_Clicked"
                    IsVisible="false"/>
            
            <Button x:Name="Home"
                    Text="Home"
                    Clicked="Home_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

