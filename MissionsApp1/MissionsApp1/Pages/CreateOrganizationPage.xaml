<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MissionsApp1.Pages.CreateOrganizationPage">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Create an Organization account"/>
            <Entry x:Name="UsernameEntry"
                       Placeholder="Create A Username"/>
            <Entry x:Name="OrganizationName"
                   Placeholder="Organization Name"/>
            <Entry x:Name="BridgeNumber"
                   Placeholder="Enter Your Bridge Number"/>
            <Entry x:Name="EmailEntry"
                       Placeholder="Email Address"/>
            <Entry x:Name="ContactNumber"
                   Placeholder="Enter A Contact Number"/>


            <Button x:Name="CreateOrganizationAccount"
                        Text="Create Account"
                        Clicked="CreateOrganizationAccount_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>